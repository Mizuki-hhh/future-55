<div class='whole__devise'>
  <header class='login__header'>
  <%= link_to image_tag("logo_transparent_copy.png",width:'200px', class:"logo__transparent"), root_path %>
  </header>
 
  <%= form_with model: @user, url: user_session_path, class: 'registration__main', local: true do |f| %>

  <div class='form__wrap'>
    <div class='form__header'>
      <h1 class='form__header--text'>
        ユーザーログイン
      </h1>
    </div>

    <%= render 'devise/shared/error_messages', model: f.object %>

    <div class='login__flash--message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>メールアドレス</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.email_field :email, autofocus: true, class:'input__default', id:'email', placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>パスワード</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.password_field :password, class:'input__default', id:'password', autocomplete: "current-password" %>
    </div>

    <div class="login__btn">
      <%= f.submit "ログイン", class:'just__login--btn' %>
    </div>
  </div>
  <% end %>

  <footer class='fillin__contents--footer'>
  <ul class="small__footer--menu">
    <li><a href="#">プライバシーポリシー</a></li>
    <li><a href="#">FUTURE利用規約</a></li>
  </ul>
  <%= link_to image_tag("logo_transparent_copy.png", width:'200px', class:"logo__transparent"), root_path %>
  <p class="inc">
    ©︎FUTURE,Inc.
  </p>
  </footer>


</div>
