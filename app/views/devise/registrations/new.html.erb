<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

  <%= render 'devise/shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :role, "どちらかお選びください*" %><br />
    <%= f.select :role, { '学生の方' => 'student', '企業・研究機関等の方' => 'contributor' }, {autofocus: 'true', class: 'form-control'} %>
  </div>


  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label class="form-text">生年月日</label><br />
    <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="field">
    <%= f.label :occupation, "所属" %><br />
    <%= f.text_field :occupation, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール" %><br />
    <%= f.text_area :profile, class: :form__text %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
