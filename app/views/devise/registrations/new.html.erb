<div class='whole__devise'>

  <header class='login__header'>
  <%= link_to image_tag("logo_transparent_copy.png", width:'200px', class:"logo__transparent"), root_path %>
  </header>

  <%= form_with model: @user, url: user_registration_path, class: 'registration__main', local: true do |f| %>
  <div class='form__wrap'>
    <div class='form__header'>
      <h1 class='form__header--text'>
        ユーザー新規登録
      </h1>
    </div>

    <%= render 'devise/shared/error_messages', model: f.object %>


    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>どちらかお選びください</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.select :role, { '学生の方' => 'student', 'お仕事をされている方' => 'contributor' }, {autofocus: 'true', class:'form__control'} %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>お名前</label>
        <span class='indispensable'>必須</span>
        <p class='sub__info'>マイページ等、表示するときに使われます</p>
      </div>
      <%= f.text_field :name, class:'input__default', id:'name', placeholder:'ニックネーム可' %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>メールアドレス</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.email_field :email, class:'input__default', id:'email', placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>パスワード</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.password_field :password, class:'input__default', id:'password', placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>パスワード（確認）</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:'input__default', id:'password-confirmation', placeholder:"同じパスワードを入力して下さい", autocomplete: "new-password" %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>生年月日</label>
        <span class='indispensable'>必須</span>
      </div>
      <div class='input__birth--wrap'>
        <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
      <p class='info__text'></p>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>所属</label>
        <span class='indispensable'>必須</span>
      </div>
      <%= f.text_field :occupation, class:'input__default', id:'occupation' %>
    </div>

    <div class='form__group'>
      <div class='form__text--wrap'>
        <label class='form__text'>プロフィール</label>
        <span class='optional'>任意</span>
      </div>
      <%= f.text_area :profile, size:'100x40', class:'input__default input__profile', id:'profile' %>
    </div>

    <div class='form__group'>
      <h2 class='form__btn--text'>
        <span></span>
      </h2>
    </div>

    <div class='register__btn' >
      <%= f.submit "登録する", class:'signup__btn' %>
    </div>
    <p></p>
  <% end %>
    
    <div class='go__to--login'>
      <%= render "devise/shared/links" %>
    </div>
  </div>

  <footer class='fillin__contents--footer'>
  <ul class="small__footer--menu">
    <li><a href="#">プライバシーポリシー</a></li>
    <li><a href="#">FUTURE利用規約</a></li>
  </ul>
  <%= link_to image_tag("logo_transparent_copy.png", width:'200px', class:"logo__transparent"), root_path %>
  <p class="inc">
    ©︎FUTURE,Inc.
  </p>
  </footer>

</div>